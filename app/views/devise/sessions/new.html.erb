<div class="min-h-screen flex items-center justify-center bg-gray-400">
  <div class="bg-white p-10 rounded shadow-md w-2/3">
    <h2 class="text-3xl font-bold mb-10 text-gray-900">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div class="space-y-2">
        <%= f.label :email, class: "text-gray-500" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded mt-1" %>
      </div>

      <div class="space-y-2">
        <%= f.label :password, class: "text-gray-500" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border border-gray-300 rounded mt-1" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center space-x-2">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          <%= f.label :remember_me, class: "text-gray-500" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
