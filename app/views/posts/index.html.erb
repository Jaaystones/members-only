<div class="border-b-2 border-gray-800 mb-4 pb-2">
  <h1 class="text-3xl font-bold-italics mb-6">Posts</h1>
</div>

<% @posts.each do |post| %>
  <div class="bg-gray-200 rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-bold mb-2"><%= post.title %></h2>
    <p class="text-gray-700 mb-4"><%= post.content %></p>
    <% if user_signed_in? %>
      <p class="text-gray-600">
        <span class="font-bold italic">Author:</span> <%= post.user.email %>
      </p>
      <% if post.user == current_user %>
        <%= link_to "Edit Post", edit_post_path(post), class: "text-blue-500 hover:underline mr-2" %>
        <%= link_to "Delete Post", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
      <% end %>
    <% end %>
  </div>
<% end %>
